BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS "TB_BOOKS" (
	"ID"	INTEGER NOT NULL,
	"TITLE"	TEXT NOT NULL,
	"WRITER"	TEXT NOT NULL,
	PRIMARY KEY("ID" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "TB_CLIENTS" (
	"ID"	INTEGER NOT NULL,
	"NAME"	TEXT NOT NULL,
	"BUY_DATE"	TEXT NOT NULL,
	PRIMARY KEY("ID" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "TB_BUY_BOOKS" (
	"ID"	INTEGER NOT NULL,
	"CLIENT_ID"	INTEGER NOT NULL,
	"BOOK_ID"	INTEGER NOT NULL,
	PRIMARY KEY("ID" AUTOINCREMENT),
	FOREIGN KEY("BOOK_ID") REFERENCES "TB_BOOKS"("ID"),
	FOREIGN KEY("CLIENT_ID") REFERENCES "TB_CLIENTS"("ID")
);
